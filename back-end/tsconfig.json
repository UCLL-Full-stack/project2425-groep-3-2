{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./src"
    },
    "include": [
      "src/**/*.ts",
      "util/types/**/*.d.ts"  // Add this line to ensure the types are loaded
    ],
    "exclude": [
      "node_modules"
    ]
  }
  